<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity" >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/power_selector"
        android:background="@null"
        android:id="@+id/bPower"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus_selector"
        android:background="@null"
        android:id="@+id/bVolUp"
        android:layout_below="@+id/bPower"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/minus_selector"
        android:background="@null"
        android:id="@+id/bVolDown"
        android:layout_below="@+id/bVolUp"
        android:layout_alignStart="@+id/bVolUp"
        android:layout_marginTop="20dp" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/up_selector"
        android:background="@null"
        android:id="@+id/bChannelUp"
        android:layout_alignBottom="@+id/bVolUp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/down_selector"
        android:background="@null"
        android:id="@+id/bChannelDown"
        android:layout_alignBottom="@+id/bVolDown"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_devices"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/numbers_selector"
        android:background="@null"
        android:id="@+id/bDigits"
        android:layout_below="@+id/bVolDown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
